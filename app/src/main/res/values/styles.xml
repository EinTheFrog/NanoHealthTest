<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.NanoHealthTest" parent="Theme.NanoHealthTest" />

    <style name="Widget.NanoHealthTest.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.NanoHealthTest.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/yellow_grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="Widget.NanoHealthTest.TopBarButton" parent="Widget.NanoHealthTest.Button">
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="ShapeAppearanceOverlay.NanoHealthTest.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TextAppearance.NanoHealthTest.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.NanoHealthTest.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextAppearance.NanoHealthTest.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.NanoHealthTest.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextAppearance.NanoHealthTest.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextAppearance.NanoHealthTest.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.NanoHealthTest.CardViewRoundTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.RoundTop</item>
    </style>

    <style name="Widget.NanoHealthTest.CardViewRoundBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.RoundBottom</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.RoundTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.RoundBottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

</resources>